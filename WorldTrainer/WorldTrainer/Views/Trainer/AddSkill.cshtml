@model WorldTrainer.Models.SkillModel

@{
    ViewData["Title"] = "AddSkill";
}

<h1>Add Skill</h1>
<a class="btn btn-danger" asp-area="" asp-controller="Trainer" asp-action="Logout">Logout</a>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddSkill">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="skill" class="control-label"></label>
                <input asp-for="skill" class="form-control" />
                <span asp-validation-for="skill" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
